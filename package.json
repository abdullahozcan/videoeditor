{
  "name": "electron-ai-subtitler",
  "version": "1.0.0",
  "description": "Electron desktop app: AI-powered subtitle generation + burn-in using OpenAI and ffmpeg",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:fedora": "electron-builder --linux rpm",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "openai",
    "subtitles",
    "ffmpeg",
    "whisper",
    "video-editor"
  ],
  "author": {
    "name": "Video Editor Team",
    "email": "info@videoeditor.app"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "ffmpeg-static": "^5.2.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.electron.ai-subtitler",
    "productName": "AISubtitler",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": null,
    "linux": {
      "target": [
        "dir",
        "tar.gz"
      ],
      "category": "AudioVideo",
      "executableName": "ai-subtitler"
    },
    "rpm": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libX11-xcb",
        "libXtst",
        "xdg-utils",
        "at-spi2-atk",
        "libuuid"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
